<%= render 'shared/navigation' %>

<%= render 'shared/content_title', title: @project.name %>

<p class='text-center mb-4'><em>
  <%= @project.description %>
</em></p>

<div class='text-center'>
    <%= link_to 'Edit Project', edit_project_path(@project.id), class: 'btn btn-sm btn-primary'%>
    <%= link_to 'Delete Project', project_path(@project), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-sm btn-secondary' %>
</div>

<div class='mt-3'>
  <%= render 'shared/tickets', ticket_obj: @project.tickets %>
</div>

<div class='text-center mt-3'>
  <%= link_to 'Back to Projects', projects_path %>
</div>