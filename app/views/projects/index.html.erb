<%= render 'shared/navigation' %>

<%= render 'shared/content_title', title: 'Projects' %>

  <% if @projects.size == 0 %>
    <p>There are no projects to display. <%= link_to 'Create a Project', new_project_path %></p>
  <% end %>

<table class="table table-striped table-bordered">
  <thead>
    <tr>
      <th class='text-center'>Name</th>
      <th class='number text-center'>Open Tickets</th>
      <th class='number text-center'>Total Tickets</th>
    </tr>
  </thead>
  <tbody>
    <% @projects.each do |project| %>
      <tr>
        <td class='text-center'>
          <%= link_to project.name, project_path(project.id) %><br>
          <%= project.description%>          
        </td>
        <td class='text-center'>
          <%= project.tickets.where.not(status: 'fixed' ).size %>
        </td>
        <td class='text-center'>
          <%= project.tickets.size %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<div class='text-center'>
  <%= link_to 'New Project', new_project_path, class: 'btn btn-primary ml-3'%>
</div>