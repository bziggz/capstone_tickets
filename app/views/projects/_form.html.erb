<div>
  <%= form_with model: @project, local: true do |f| %>
    <div class='form-group'>
      <%= f.label :name %><br>
      <%= f.text_field :name %>
    </div>
    <div class='form-group'>
    <%= f.label :description %><br>
      <%= f.text_area :description %>
    </div>
    <%= f.submit @project.new_record? ? 'Create Project' : 'Update Project', class: 'btn btn-primary' %>
  <% end %>
</div>